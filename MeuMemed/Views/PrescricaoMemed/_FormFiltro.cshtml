@model MeuMemed.ViewModel.PrescricaoMemed.FiltroPrescricaoMemedViewModel

<div class="row">
    <div class="col col-12">
        <div class="card mb-3">
            <div class="card-header bg-dark text-light">
                <h5>Selecione</h5>
            </div>
            <div class="card-body">
            <form asp-action="Index" method="get">

                <div class="row">
                    <div class="col-12 col-md-6">

                        <label asp-for="MedicoId" class="control-label"></label>
                        <select asp-for="MedicoId" asp-items="ViewBag.Medicos" class="form-control" required>
                            <option></option>
                        </select>
                        <span asp-validation-for="MedicoId" class="text-danger ml-3"></span>
                    </div>


                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label asp-for="PacienteId" class="control-label"></label>
                            <select asp-for="PacienteId" asp-items="ViewBag.Pacientes" class="form-control" required>
                                <option></option>
                            </select>
                            <span asp-validation-for="PacienteId" class="text-danger ml-3"></span>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col col-md-3">
                        <div class="form-group">
                            <button class="btn btn-dark btn-block" type="submit"> <i class="fas fa-search"></i> Nova Prescrição</button>
                        </div>
                    </div>
                </div>

            </form>
                </div>
        </div>
    </div>

</div>